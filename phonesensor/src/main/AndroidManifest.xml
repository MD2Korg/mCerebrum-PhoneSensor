<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.md2k.phonesensor">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeDark" >
        <activity
            android:name=".ActivityPhoneSensor"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityAbout"
            android:label="About PhoneSensor"
            android:icon="@drawable/about"
            android:theme="@style/AppThemeDark">
        </activity>
        <activity
            android:name=".ActivityCopyright"
            android:label="Copyright"
            android:icon="@drawable/copyright"
            android:theme="@style/AppThemeDark">
        </activity>

        <service
            android:name=".ServicePhoneSensor"
            android:enabled="true"
            android:exported="true"></service>
        <activity
            android:name=".ActivityPhoneSensorSettings"
            android:label="Settings: Phone Sensor"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="org.md2k.phonesensor.ActivityPhoneSensorSettings" />
            </intent-filter>
            >
        </activity>
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>
</manifest>
